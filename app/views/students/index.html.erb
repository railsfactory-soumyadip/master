<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Student code</th>
      <th>Marks obtained</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.student_code %></td>
        <td><%= student.grades.find_by(subject_id: @subject.id, teacher_id: current_user.id).marks_obtained if @subject.present? && student.grades.find_by(subject_id: @subject.id, teacher_id: current_user.id).present? %></td>
        <td><%= link_to 'Update marks', edit_student_path(student, subject_name: @subject.name) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>